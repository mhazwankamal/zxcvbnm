<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="350dp"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/home_last_watching"
    android:clickable="true"
    android:elevation="8dp"
    android:padding="5dp"
    android:focusable="false"
    android:background="@drawable/home_cardview_selector"
    android:orientation="horizontal">





        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Title_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="MANCHESTER UNITED VS CHEALSEA"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_gravity="right"
            android:background="#00451e3e"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lastwatching_channelname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:shadowDx="1.5"
                android:text="10:00pm"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#696969"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/lastwatching_channelcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="#696969"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="SUN, 28 DEC 2018"

               />
        </LinearLayout>



</FrameLayout>